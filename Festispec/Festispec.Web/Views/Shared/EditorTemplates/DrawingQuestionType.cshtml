@model Festispec.Web.Models.Questions.Types.DrawingQuestionType

@{
    var base64 = Convert.ToBase64String(@Model.Details.Images[0]);
    var imgSrc = String.Format("data:image/png;base64,{0}", base64);
}
    <div id="draw-canvas-@Model.Id" class="draw-question">
        <div class="draw-error error"></div>
        <div class="container">
            <img src="@imgSrc">
            <input type="hidden" name="@Model.Variable">
        </div>
    </div>


<script>
    $(document).ready(function () {
        drawQuestions.push(new DrawQuestion("#draw-canvas-@Model.Id"));
    });
</script>