@model Festispec.Web.Models.Questions.Types.DrawingQuestionType

<div style="width: 400px; height: 400px; border: 1px solid black; background: url('../../@Model.ImageUrl'); background-repeat: no-repeat;">
    <canvas id="draw-canvas-@Model.Id" width="400" height="400"></canvas>
</div>

<script>
    var canvas = new fabric.Canvas('draw-canvas-@Model.Id');
    canvas.isDrawingMode = true;
    canvas.freeDrawingBrush.width = 3;
    canvas.freeDrawingBrush.color = "#ff0000";
    canvasDict.addCanvas(canvas, @Model.Id);
</script>