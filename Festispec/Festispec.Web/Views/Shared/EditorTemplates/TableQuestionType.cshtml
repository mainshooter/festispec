@model Festispec.Web.Models.Questions.Types.TableQuestionType

    <div id="table-@Model.Variable" class="survey-question">
        <div class="table-error error"></div>
        <table class="table">

            <thead>
                <tr>
                    @foreach (var col in Model.Details.Choices.Cols)
                    {
                        <th scope="col">@col</th>
                    }
                </tr>
            </thead>
            <tbody>
                @for (var i = 5; i > 0; i--)
                {
                    <tr>
                        @foreach (var col in Model.Details.Choices.Cols)
                        {
                            <td>
                                @if (Model.Details.Choices.SelectedCol == col)
                                {
                                    int index = 0;
                                    <select>
                                        @foreach (var opt in @Model.Details.Choices.Options)
                                        {
                                            <option value="@index">@opt</option>
                                            index++;
                                        }
                                    </select>
                                }
                                else
                                {
                                    <input type="text" class="form-control" />
                                }
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
        <input type="hidden" name="@Model.Variable">
        <script>
				    tableQuestions.push(new TableQuestion("table-@Model.Variable", "@Model.Variable"));
        </script>
    </div>