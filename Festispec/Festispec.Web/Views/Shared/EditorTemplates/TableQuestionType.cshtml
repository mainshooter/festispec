@model Festispec.Web.Models.Questions.Types.TableQuestionType

<table id="table-@Model.Id" class="table">
    <thead>
        <tr>
            @foreach (var col in Model.Details.Choices.Cols)
            {
                <th scope="col">@col</th>
            }
    </tr>
    @for (var i = 5; i > 0; i--)
    {
        <tr>
            @foreach (var col in Model.Details.Choices.Cols)
            {
                <td>
                @if (Model.Details.Choices.SelectedCol == col)
                {
                    <select name="tabel_@Model.Id-vraag_@i">
                        @foreach (var opt in @Model.Details.Choices.Options)
                        {
                            <option value="@opt">@opt</option>
                        }
                    </select>
                }
                else
                {
                    <input type="text" class="form-control" name="tabel_@Model.Id-vraag_@i"/>
                }
                </td>
            } s
        </tr>
    }
    </thead>
</table>