@model Festispec.Web.Models.SurveyModel

@{
	ViewBag.Title = "Survey afnemen";
}
@section Scripts
{
	<script src="@Url.Content("~/Scripts/survey/conduct/conduct.js")"></script>
}

<h2>Survey</h2>


@foreach (var question in Model.Questions)
{
	<h3>@question.Details.Question</h3>
	@Html.EditorFor(m => question);
	<br />
	<span><strong>Beschrijving: </strong> @question.Details.Description</span>
}
<button type="button" id="saveSurvey">Opslaan</button>