@model IEnumerable<Festispec.Domain.Survey>

@{
    ViewBag.Title = "In te vullen vragenlijsten";
}

<h2>In te vullen vragenlijsten</h2>

<table class="table">
    <tr>
        <th>
            Evenement naam
        </th>
        <th>
            Acties
        </th>
		<th>Evenement inzien</th>
    </tr>

    @if(!Model.Any())
    {
        <tr>
            <td>
                Geen vragenlijsten gevonden voor vandaag
            </td>
            <td>
            </td>
        </tr>
    }

    @foreach(var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Order.Event.Name)
            </td>
            <td>
                @Html.ActionLink("Vragenlijst afnemen", "Conduct", new { id = item.Id })
            </td>
            <td>
                @Html.ActionLink("Evenement inzien", "EventDetails", "Event", new { id = item.Order.EventId}, null)
            </td>
        </tr>
    }
</table>
