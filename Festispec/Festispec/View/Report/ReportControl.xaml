<UserControl x:Class="Festispec.View.Report.ReportControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Festispec.View.Report"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Label>Naam rapport</Label>
        <TextBox BorderThickness="1" Text="{Binding Title}"></TextBox>
        <Button Command="{Binding SaveReportCommand}">Opslaan</Button>
    </StackPanel>
</UserControl>
