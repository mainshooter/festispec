<Window x:Class="Festispec.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Festispec"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        DataContext="{Binding Main,Source={StaticResource Locator}}">
    <Grid>
        <DataGrid ItemsSource="{Binding Employees}">

        </DataGrid>
        <Button Content="Add Employee" HorizontalAlignment="Left" Margin="384,340,0,0" VerticalAlignment="Top" Width="75" Command="{Binding ShowAddEmployeeCommand}"/>

    </Grid>
</Window>
