<Page x:Class="Festispec.View.Pages.Report.element.AddElement"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Festispec.View.Pages.Report.element"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddElement">

    <StackPanel>
        <Label>Toevoegen van element</Label>
        <ComboBox ItemsSource="{Binding ElementTypes}" Text="Select option" BorderThickness="2" SelectedIndex="{Binding SelectedElementType}" IsSynchronizedWithCurrentItem="True" >

        </ComboBox>
        <Button Command="{Binding AddElementCommand}">Voeg een element toe</Button>
        <Button Command="{Binding GoBackCommand}">Terug</Button>
        
    </StackPanel>
</Page>
