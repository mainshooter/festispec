<Page x:Class="Festispec.View.Report.ReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Festispec.View.Report"
      xmlns:control="clr-namespace:Festispec.View.Report.Element" 
      DataContext="{Binding ReportVM, Source={StaticResource Locator}}"
      mc:Ignorable="d" 
      Title="Report">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"></ColumnDefinition>
                <ColumnDefinition Width="700"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="5">
                <local:ReportControlUserControl></local:ReportControlUserControl>
                <local:AddReportElementUserControl Margin="0,50,0,0"></local:AddReportElementUserControl>
            </StackPanel>
            <ScrollViewer Grid.Column="1" Margin="5">
                <StackPanel >
                    <Label HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="50" Content="{Binding Title}"></Label>
                    <ItemsControl ItemsSource="{Binding ReportElementUserControlls}"></ItemsControl>
                </StackPanel>
            </ScrollViewer>
    </Grid>
</Page>
