<Page x:Class="Festispec.View.Pages.Employee.EmployeePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Festispec.View.Pages.Employee"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EmployeePage"
      DataContext="{Binding EmployeeList,Source={StaticResource Locator}}">

    <Grid>
        <Label Content="Medewerkers" HorizontalAlignment="Left" Margin="42,36,0,0" VerticalAlignment="Top"/>
        <DataGrid ItemsSource="{Binding EmployeeList}" SelectedItem="{Binding SelectedEmployee,Mode=TwoWay}">
        </DataGrid>
        <Button Content="Add Employee" Command="{Binding OpenAddEmployee}" Margin="370,373,307,45"></Button>
    </Grid>
</Page>
